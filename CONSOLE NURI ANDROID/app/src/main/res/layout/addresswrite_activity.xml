<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/addressnameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="받으시는 분 이름"
        android:inputType="textPersonName"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/addresscontactView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="연락처"
        android:inputType="phone"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/postaladdressView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="9"
            android:ems="10"
            android:hint="주소검색"
            android:inputType="textPersonName"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/searchaddressView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_search_black_24dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/addressDetailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="상세주소"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#A3A3A3" />

    <EditText
        android:id="@+id/addressrequestView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:ems="10"
        android:hint="배송 시 요청 사항"
        android:inputType="textPersonName"
        android:textColor="#000000" />

    <Button
        android:id="@+id/addaddressView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추가하기" />
</LinearLayout>